# EditorConfig is awesome: https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[*.py]
indent_size = 2

[*.ipynb]
indent_size = 2

[*.{json,yaml,yml,txt}]
indent_size = 2

[*.tex]
indent_size = 2
